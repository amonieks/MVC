@model Noticias

        @{
            ViewData["Title"]="Noticias";
        }

        <div>Noticia</div>

    <form method="post" action='@Url.Action("Cadastrar")'>
    

            <label>ID</label>
            <input type="text" name="IdNoticia" />

            <label>Titulo</label>
            <input type="text" name="Titulo" />

            <label>Noticia</label>
            <input type="text" name="Texto" />

            <label>Imagem</label>
            <input type="file" name="Imagem" />

            <button type="submit">Cadastrar</button>
    </form>

    <table class="table table-striped table-responsive">
            <thead>
                <th>ID</th>
                <th>Titulo</th>
                <th>Noticia</th>
                <th>Foto</th>
                <th>Excluir</th>

            </thead>
            <tbody>
                @foreach(Noticias e in ViewBag.Noticias){
                    <tr>
                        <td>@e.IdNoticias</td>
                        <td>@e.Titulo</td>
                        <td>@e.Texto</td>
                        <td><img src="img/Equipes/@e.Imagem" alt="Imagem da equipe @e.Titulo" width="40"></td>
                        <td><a asp-area="" asp-controller="Noticias" asp-action="Excluir" asp-route-id="@e.IdNoticias">                        
                            <i class="fas fa-save"></i>                            
                            </a></td>
                    </tr>
                }
            </tbody>
    </table>