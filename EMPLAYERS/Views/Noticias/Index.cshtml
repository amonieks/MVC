@model Noticias

        @{
            ViewData["Title"]="Noticias";
        }

        <div class="titulo_pagina">
            <h1>Noticia</h1>
        </div>
        

    <form method="POST" action='@Url.Action("Cadastrar")' enctype="multipart/form-data" class="cadastro">

            <div class="campo">

            <label>ID</label>
            <input type="text" name="IdNoticia" />
            </div>

            <div class="campo">
            <label>Titulo</label>
            <input type="text" name="Titulo" Id="Titulo"/>
                
            </div>

            <div class="campo">
            <label>Noticia</label>
            <input type="text" name="Texto" id="Noticia" />
                
            </div>

            <div class="campo">
            <label>Imagem</label>
            <input type="file" name="Imagem" id="Imagem" />
                
            </div>


            <button class="gradient btn" type="submit">Cadastrar</button>
    </form>

    <table class="table table-striped table-responsive">
            <thead>
                <th>ID</th>
                <th>Titulo</th>
                <th>Noticia</th>
                <th>Foto</th>
                <th>Excluir</th>

            </thead>
            <tbody>
                @foreach(Noticias e in ViewBag.Noticias){
                    <tr>
                        <td>@e.IdNoticias</td>
                        <td>@e.Titulo</td>
                        <td>@e.Texto</td>
                        <td><img src="img/Noticias/@e.Imagem" alt="Imagem da equipe @e.Titulo" width="40"></td>
                        <td><a asp-area="" asp-controller="Noticias" asp-action="Excluir" asp-route-id="@e.IdNoticias">                        
                            <i class="fas fa-save"></i>                            
                            </a></td>
                    </tr>
                }
            </tbody>
    </table>